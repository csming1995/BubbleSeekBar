<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/demo_5_seek_bar_1"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        app:bsb_second_track_color="@color/colorSeekBarProgressContent"
        app:bsb_track_color="@color/colorSeekBarProgressBackground"
        app:bsb_touch_to_seek="true"
        app:bsb_thumb_drawable="@drawable/btn_live_controlshaft_normal"/>
</LinearLayout>